<?xml version="1.0" encoding="utf-8"?>

<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@color/black"
	android:layout_height="fill_parent">
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	
	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/app_name"
	        android:gravity="center_horizontal"
	        android:textColor="@color/white"
	        android:textSize="32sp" />
	
	
	        <TextView
	            android:id="@+id/textView2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:text="@string/lblCourriel"
	            android:textColor="@color/white"
	            android:layout_marginLeft="10dip"
	            android:layout_marginTop="15dip"  />
	
	        <EditText
	            android:id="@+id/txBoxCourriel"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@color/white"
	            android:hint="@string/hintEmail"
	            android:inputType="textEmailAddress"
	            android:layout_marginLeft="5dip"
	            android:layout_marginRight="5dip"
	            android:layout_marginBottom="15dip"  />
	
	
	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:text="@string/lblMdp"
	            android:textColor="@color/white"
	            android:layout_marginLeft="10dip"  />
	
	        <EditText
	            android:id="@+id/txBoxMdp"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@color/white"
	            android:hint="@string/hintMdp"
	            android:inputType="textPassword"
	            android:layout_marginLeft="5dip"
	            android:layout_marginRight="5dip"
	            android:layout_marginBottom="30dip"/>
	
	    
	
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
		    <Button
		        android:id="@+id/btnConnOk"
		        android:layout_width="0px"
		        android:layout_height="wrap_content"
		        android:text="@string/btnConnexionOk"
		        android:textColor="@color/white"
		        android:layout_weight="1"
		        android:layout_marginBottom="5dip" />
		
		    <Button
		        android:id="@+id/btnConnReset"
		        android:layout_width="0px"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:text="@string/btnConnexionReset"
		        android:textColor="@color/white" />
		</LinearLayout>
	</LinearLayout>
</ScrollView>